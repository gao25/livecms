.lvs-list
  .detail
    float left
    width 310px
    height 330px
    border 1px solid #d3d3d3
    margin 40px 0 0 40px
    overflow hidden
    .lvs-img
      position relative
      width 310px;
      height 200px
      .img
        width 310px
        height 200px
      .play
        position absolute
        top 50%
        left 50%
        width 44px
        margin-left -22px
        margin-top -22px
      .lvs-title
        font-size 14px
        position absolute
        color #f5f5f5
        left 14px
        bottom 5px
      .lvs-id
        position absolute
        top 10px
        right 8px
        width auto
        height 18px
        padding 0 5px
        background-color #a37c8c
        color #fefefe
        text-align center
        border-radius 18px
    .lvs-message
      padding 10px 15px
      font-size 11px
      color #4c4c4c
      line-height 16px
      border-bottom 1px solid #d3d3d3
      overflow hidden
      .lvs-comment
        float left
      .lvs-praise
        float right
    .detail-footer
      margin 8px 10px
      float right
      li
        cursor pointer
        display inline-block
      .more
        position relative
        ul
          position absolute
          top -46px
          right -5px
          width 25px
          padding-bottom 10px
          background-color #fff
          display none
          li
            margin-bottom 2px
            a
              color #808080
.lvs-reviewoverlay
  position fixed
  width 350px
  height 200px
  left 30%
  top 100px
  .review-report
    margin 20px
  .review-btn
    width 100%
    margin-top 50px
    input
      width 100px
      height 35px
      border-radius 5px
      margin-left 50px
.lvs-reasonoverlay
  position fixed
  width 350px
  height 330px
  left 30%
  top 100px
  textarea
    width 330px
    height 210px
    border 1px solid #ccc
    overflow auto
    margin 10px
  .reason-btn
    width 100%
    margin-top 10px
    input
      width 100px
      height 35px
      border-radius 5px
      margin-left 50px

